{
  "defaults": {
    "port": 8080,
    "ocsp": {
      "agent": {}
    },
    "ipFilter": null,
    "browser":  {
      "autoClose": false,
      "puppeteer": {
        "headless": true
      }
    },
    "save": {
      "rootDir": "captures/"
    },
    "loggerOptions": {
      "verbosity": {
        "headers": false
      }
    }
  },
  "scrapers": {
    "OCSPFail": {
      "port": "${self.defaults.port}",
      "loggerOptions": "${self.defaults.loggerOptions}",
      "proxy":  {
        "target": {
          "protocol": "https:",
          "host": "revoked.badssl.com",
          "port": 443
        }
      },
      "ocsp": "${self.defaults.ocsp}",
      "browser": "${self.defaults.browser}",
      "save": "${self.defaults.save}"
    }
  }
}
